{
  "name": "Decide_Search",
  "version": "2.0.0",
  "description": "A powerful browser extension to enhance search experience with intelligent text processing",
  "main": "manifest.json",
  "scripts": {
    "build": "echo 'Building extension...'",
    "test": "echo 'Running tests...'",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "lint:report": "eslint src/**/*.js -f html -o eslint-report.html",
    "format": "prettier --write \"src/**/*.{js,css,html,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html,json}\"",
    "check": "npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "dev": "echo 'Starting development server...'",
    "package": "zip -r enhance-search-buddy.zip . -x '*.git*' 'node_modules/*' '*.bak*' 'debug.html' 'test.html'"
  },
  "keywords": [
    "browser-extension",
    "search",
    "text-processing",
    "clipboard",
    "productivity"
  ],
  "author": "SantaChains",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SantaChains/search-enhance.git"
  },
  "bugs": {
    "url": "https://github.com/SantaChains/search-enhance/issues"
  },
  "homepage": "https://github.com/SantaChains/search-enhance#readme",
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
